generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  NA_FILA
  EM_ANDAMENTO
  ATENDIDO
}

enum TipoSenha {
  SG
  SP
  SE
}

model Senha {
  id                  Int        @id @default(autoincrement())
  tipoSenha           TipoSenha
  dataHoraEmissao     DateTime   @db.DateTime(3)
  dataHoraAtendimento DateTime?  @db.DateTime(3)
  statusAtendimento   Status     @default(NA_FILA)
  guiche              Guiche?    @relation("guicheSenhas", fields: [guicheId], references: [id])
  guicheId            Int?
  Relatorio           Relatorio? @relation(fields: [relatorioId], references: [id])
  relatorioId         Int?
  Painel              Painel[]
}

model Painel {
  id          Int       @id @default(autoincrement())
  dia         Int
  mes         Int
  ano         Int       @db.Year
  preferencia TipoSenha
  senhaId     Int
  senha       Senha     @relation(fields: [senhaId], references: [id])
}

model Relatorio {
  id                      Int      @id @default(autoincrement())
  dataRelatorio           DateTime @db.DateTime(3)
  senhas                  Senha[]
  tempoMedioAtendimentoSP DateTime @db.Time(3)
  tempoMedioAtendimentoSG DateTime @db.Time(3)
  tempoMedioAtendimentoSE DateTime @db.Time(3)
}

model Guiche {
  id                    Int     @id @default(autoincrement())
  statusDisponibilidade String
  senhasAtendidas       Senha[] @relation("guicheSenhas")
}
